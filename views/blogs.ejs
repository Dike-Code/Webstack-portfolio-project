<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>NodeJs Mastery | <%=headTitle%></title>
        <link rel="stylesheet" href="./style.css" />
    </head>
    <body>
        <%- include('./partials/nav.ejs')%>
        <section class="blogSection">
            <div class="container">
                <h2 class="allBlog"><%=title%></h2>
                <div class="blog-content grid">
                    <% if(blogs.length > 0) { %> <% blogs.forEach((blog) => {%>
                    <div class="card">
                        <img src="<%=blog.banner%>" alt="image" />
                        <div class="cardBody">
                            <h3><%= blog.title%></h3>
                            <p><%= blog.nugget%></p>
                            <a href="" class="cardBtn">Read More...</a>
                        </div>
                    </div>
                    <%})%> <%}%>
                </div>
            </div>
        </section>
        <%- include('./partials/footer.ejs')%>
        <script>
            const menu = document.querySelector('#mobileMenu');
            const nav = document.querySelector('.navigations');

            menu.addEventListener('click', (e) => {
                nav.classList.toggle('show');
            });
        </script>
        <!-- <script src="script/app.js"></script>
        <script src="script/os.js"></script>
        <script src="script/file-system.js"></script>
        <script src="script/stream.js"></script> -->
        <!-- <script src="script/create-server.js"></script> -->
    </body>
</html>
