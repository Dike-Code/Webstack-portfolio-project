<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Webstack | Portfolio-Project <%=create%></title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="stylesheet" href="./style.css" />
    </head>

    <body>
        <%- include('./partials/nav.ejs')%>
        <section class="createBlog">
            <div class="container">
                <div class="blogContent">
                    <h3 class="form-title"> Create a Blog </h3>
                </div>
                <form action="/blogs" class="form" method="POST">
                    <div class="form-contrl">
                        <label for="title">Title</label>
                        <input
                            type="text"
                            name="title"
                            id="title"
                            placeholder="Title"
                        />
                    </div>
                    <div class="form-contrl">
                        <label for="banner">Banner Url</label>
                        <input
                            type="text"
                            name="banner"
                            id="nugget"
                            placeholder="nugget"
                        />
                    </div>
                    <div class="form-contrl">
                        <label for="nugget">Nugget</label>
                        <input
                            type="text"
                            name="nugget"
                            id="nugget"
                            placeholder="nugget"
                        />
                    </div>
                    <small></small>
                    <div class="form-contrl">
                        <label for="blog-text">Notes</label>
                        <textarea
                            name="body"
                            id="blog-text"
                            placeholder="Write blog..."
                        ></textarea>
                    </div>
                    <button type="submit" class="btn formBtn">Add Blog</button>
                </form>
            </div>
        </section>
        <%- include('./partials/footer.ejs')%>
        <script>
            const menu = document.querySelector('#mobileMenu')
            const nav = document.querySelector('.navigations')
            
            menu.addEventListener('click', (e) =>{
                nav.classList.toggle('show')
            })
        </script>
